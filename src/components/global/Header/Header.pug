header(class="main-header bg-white font-roboto shadow-bottom rounded-b-5")
	div(class="header-container")
		div(class="header-wrapper flex items-center")
			//- Logo
			a(class="logo flex-shrink-0" href="/")
				img(class="h-[58px]" src="./img/headerlogo1.png" alt="ACR Logo")
			
			//- Navigation
			nav(class="main-nav flex-1 flex justify-center")
				ul(class="nav-list flex items-center gap-8")
					li(class="nav-item")
						a(class="nav-link flex items-center gap-2 text-neutral-900 text-lg font-medium font-roboto transition-300 hover:text-primary-2" href="/")
							i(class="fa-solid fa-house text-primary-2")
					li(class="nav-item")
						a(class="nav-link text-neutral-900 text-lg font-medium font-roboto transition-300 hover:text-primary-2" href="/gioi-thieu") Giới thiệu
					li(class="nav-item has-dropdown relative")
						a(class="nav-link flex items-center gap-2 text-neutral-900 text-lg font-medium font-roboto transition-300 hover:text-primary-2" href="/san-pham")
							| Sản phẩm
							i(class="fa-solid fa-caret-down text-neutral-900 text-base")
						div(class="dropdown-menu absolute top-full left-0 mt-2 w-60 bg-white rounded-lg shadow-style-1 opacity-0 invisible transition-300 z-50")
							ul(class="py-2")
								li
									a(class="dropdown-link block px-5 py-3 text-sm text-body-text-33 font-roboto font-medium transition-300 hover:bg-background-2 hover:text-primary-2" href="/bot-say-thang-hoa") Bột sấy thăng hoa
								li
									a(class="dropdown-link block px-5 py-3 text-sm text-body-text-33 font-roboto font-medium transition-300 hover:bg-background-2 hover:text-primary-2" href="/trai-cay-say") Trái cây sấy
								li
									a(class="dropdown-link block px-5 py-3 text-sm text-body-text-33 font-roboto font-medium transition-300 hover:bg-background-2 hover:text-primary-2" href="/rau-cu-say") Rau củ sấy
								li
									a(class="dropdown-link block px-5 py-3 text-sm text-body-text-33 font-roboto font-medium transition-300 hover:bg-background-2 hover:text-primary-2" href="/sua-chua-say") Sữa chua sấy
					li(class="nav-item")
						a(class="nav-link text-neutral-900 text-lg font-medium font-roboto transition-300 hover:text-primary-2" href="/cong-bo-san-pham") Công bố sản phẩm
					li(class="nav-item")
						a(class="nav-link text-neutral-900 text-lg font-medium font-roboto transition-300 hover:text-primary-2" href="/quy-trinh-cong-nghe") Quy trình công nghệ
					li(class="nav-item")
						a(class="nav-link text-neutral-900 text-lg font-medium font-roboto transition-300 hover:text-primary-2" href="/chung-nhan") Chứng nhận
					li(class="nav-item")
						a(class="nav-link text-neutral-900 text-lg font-medium font-roboto transition-300 hover:text-primary-2" href="/tin-tuc") Tin tức
			
			//- Header actions
			div(class="header-actions flex items-center gap-4 lg:gap-6 xl:gap-24 flex-shrink-0")
				button(class="search-btn text-neutral-900 text-lg font-medium font-roboto transition-300 hover:text-primary-2" aria-label="Search")
					i(class="fa-regular fa-magnifying-glass")
				
				div(class="language-selector relative")
					button(class="lang-btn flex items-center gap-2 text-body-text-33 text-lg font-medium font-roboto transition-300 hover:text-primary-2")
						| VN
						i(class="fa-solid fa-caret-down text-neutral-900 text-base")
					div(class="lang-dropdown absolute top-full right-0 mt-2 w-24 bg-white rounded-lg shadow-style-1 opacity-0 invisible transition-300 z-50")
						ul(class="py-2")
							li
								a(class="lang-option block px-4 py-2 text-body-text-33 text-lg font-medium font-roboto transition-300 hover:bg-background-2 hover:text-primary-2" href="#") VN
							li
								a(class="lang-option block px-4 py-2 text-body-text-33 text-lg font-medium font-roboto transition-300 hover:bg-background-2 hover:text-primary-2" href="#") EN
				
				a(class="contact-btn group flex items-center gap-2 px-6 py-3 bg-primary-1 text-white text-lg font-medium font-roboto rounded-full transition-300 hover:bg-primary-2 min-w-[143px] h-[48px]" href="/lien-he")
					| Liên hệ
					i(class="fa-regular fa-arrow-up transition-transform duration-300 rotate-45 group-hover:rotate-90")
				
				button(class="mobile-menu-toggle hidden text-body-text-33 text-2xl" aria-label="Toggle Menu")
					i(class="fas fa-bars")

