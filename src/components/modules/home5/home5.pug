section.section-featured-products(class="py-25 lg:py-20 bg-primary-800")
	div(class="container mx-auto")
		h2(class="text-center text-white mb-10") Sản phẩm nổi bật
		
		div(class="products-slider-wrapper relative")
			button(class="slider-btn prev absolute left-0 lg:-left-15 top-1/2 -translate-y-1/2 z-10 bg-white rounded-full sq-12 flex-center shadow-drop-shadow-2 transition-300 hover:shadow-style-1 disabled:opacity-50" aria-label="Previous")
				i(class="fa-light fa-chevron-left text-primary-800")
			
			button(class="slider-btn next absolute right-0 lg:-right-15 top-1/2 -translate-y-1/2 z-10 bg-white rounded-full sq-12 flex-center shadow-drop-shadow-2 transition-300 hover:shadow-style-1 disabled:opacity-50" aria-label="Next")
				i(class="fa-light fa-chevron-right text-primary-800")
			
			div(class="products-slider overflow-hidden")
				div(class="slider-track flex transition-transform duration-500")
					
					div(class="product-card product-card--home5")
						div(class="product-inner bg-white rounded-2.5 overflow-hidden transition-300 hover:shadow-style-1")
							div(class="product-image")
								+PugImg()(src="./img/home5_1.png" alt="Thanh long sấy thăng hoa")
							div(class="product-info p-5 text-center")
								div(class="product-category text-xs text-body-text-66 mb-2 uppercase") BỘT SẤY THĂNG HOA
								h3(class="product-name text-base font-medium text-body-text-33 mb-2") Thanh long sấy thăng hoa
								div(class="product-price text-base font-bold text-body-text-11") 46.000 đ
					
					div(class="product-card product-card--home5")
